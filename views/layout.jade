!!! 5
html(lang='en')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(charset='utf-8')
    title #{title}
    link(href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='css/bundle.css')
    //-link(rel='stylesheet', type='text/css', href='css/site.css')
    //-link(rel='stylesheet', type='text/css', href='css/swipebox.css')
    //-link(rel='stylesheet', type='text/css', href='css/gallery.css')
    block head
  body
    .row-fluid
      #hideLeft.span12
        .navbar.navbar-top
          .navbar-inner
            .brand #{title}
            block navbar
    .row-fluid#page
      block content
    #slideout
      #slideclick
      #slidecontent
        h3 Albums
        ul.unstyled
          !{getAlbums}
    script(src='//code.jquery.com/jquery-1.10.2.min.js')
    script(src='js/bundle.min.js')  
    //-script(src='js/slideout.min.js')
    //-script(src='js/jquery.loadImage.min.js')
    //-script(src='js/jquery.swipebox.min.js')
    //-script(src='js/gallery.min.js')
    script(type='text/javascript').
      $("body").on("click", "a", function(event) {
        event.preventDefault();
        history.pushState({}, '', event.target.href);
        $("#page").load(event.target.href);
        return false;
      });
      $(window).on("popstate", function(event) {
        if (event.originalEvent.state !== null) {
          $("#page").load(location.href);
        }
      });
    block script
